<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favorite_list_item_layout_height"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/price"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/net"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buy_profit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/profit_divider_container"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray">

            <View
                android:id="@+id/trading_portion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <View
                android:id="@+id/remaining_portion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <TextView
            android:id="@+id/sell_profit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/trend"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/radar"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/month"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/week"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/day"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/min60"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/min30"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/min15"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/min5"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/flag"
        android:layout_width="@dimen/favorite_list_item_layout_width"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/modified"
        android:layout_width="100dp"
        android:layout_height="@dimen/favorite_list_item_layout_height"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="18sp" />

</LinearLayout>