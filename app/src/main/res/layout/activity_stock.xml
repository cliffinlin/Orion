<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 显示模式：名称和代码紧挨着显示（编辑时显示） -->
        <LinearLayout
            android:id="@+id/layout_stock_name_code_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:visibility="gone">

            <!-- 名称和代码在同一水平布局中 -->
            <TextView
                android:id="@+id/textview_display_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="200dp" />

            <!-- 代码紧跟在名称后面 -->
            <TextView
                android:id="@+id/textview_display_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <!-- 编辑模式：名称和代码输入 -->
        <LinearLayout
            android:id="@+id/layout_stock_name_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- 股票名称输入 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/textview_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/edittext_stock_name"
                    android:text="@string/stock_name"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="3dp" />

                <EditText
                    android:id="@+id/edittext_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- 股票代码输入 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="6dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/textview_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:labelFor="@+id/edittext_stock_code"
                    android:text="@string/stock_code"
                    android:textSize="13sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingBottom="3dp" />

                <EditText
                    android:id="@+id/edittext_stock_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:inputType="numberDecimal"
                    android:textSize="15sp"
                    android:background="@android:drawable/editbox_background_normal"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_line" />

        <!-- 持仓、分红、收益率统计 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textview_stock_hold_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/hold"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_stock_hold_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- 持仓一致性检查提示 -->
                <TextView
                    android:id="@+id/textview_hold_consistency_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提示持仓数量与分账户总和不一致"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="10sp"
                    android:visibility="gone"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textview_stock_bonus_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/bonus"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_stock_bonus_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textview_stock_yield_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="@string/yield"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textview_stock_yield_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- 账户A、B、C显示区域 - 压缩高度 -->
        <LinearLayout
            android:id="@+id/layout_stock_hold_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:visibility="gone"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <!-- 账户A - 压缩高度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textview_stock_account_a_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="@string/account_a"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textview_stock_account_a_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- 账户A分红显示 - 更紧凑 -->
                <TextView
                    android:id="@+id/textview_stock_dividend_a_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dividend"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/textview_stock_dividend_a_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 账户B - 压缩高度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textview_stock_account_b_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="@string/account_b"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textview_stock_account_b_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- 账户B分红显示 - 更紧凑 -->
                <TextView
                    android:id="@+id/textview_stock_dividend_b_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dividend"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/textview_stock_dividend_b_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- 账户C - 压缩高度 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textview_stock_account_c_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="@string/account_c"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/textview_stock_account_c_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <!-- 账户C分红显示 - 更紧凑 -->
                <TextView
                    android:id="@+id/textview_stock_dividend_c_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dividend"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/textview_stock_dividend_c_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 交易设置区域 -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start">

                    <CheckBox
                        android:id="@+id/checkbox_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/imageview_restore_target"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_restore"
                        android:padding="3dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 交易级别选择器 -->
            <LinearLayout
                android:id="@+id/layout_trade_level_pickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="7">

                <LinearLayout
                    android:id="@+id/layout_month_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Month"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_month"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_month_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_month_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_week_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Week"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_week"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_week_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_week_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_day_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Day"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_day"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_day_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_day_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_min60_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Min60"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_min60"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_min60_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_min60_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_min30_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Min30"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_min30"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_min30_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_min30_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_min15_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Min15"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_min15"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_min15_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_min15_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_min5_picker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="Min5"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <com.android.orion.widget.TradeLevelPicker
                        android:id="@+id/trade_level_picker_min5"
                        android:layout_width="72dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:id="@+id/textview_min5_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageview_min5_target"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ic_unchecked"
                        android:padding="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_line" />

        <!-- 交易和配额设置 - 进一步压缩高度 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- Quota部分 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/textView_stock_quota_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="@string/quota"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <!-- 带加减号的配额编辑框 - 更紧凑 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="2dp">

                    <!-- 加减号和输入框的横向布局 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- 减号按钮 - 红色 -->
                        <Button
                            android:id="@+id/button_quota_minus"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:text="-"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_red_dark"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="0dp" />

                        <!-- 配额数值输入 -->
                        <EditText
                            android:id="@+id/edittext_stock_quota"
                            android:layout_width="80dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:inputType="numberSigned|number"
                            android:digits="0123456789"
                            android:background="@android:drawable/editbox_background_normal"
                            android:padding="4dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp" />

                        <!-- 加号按钮 - 红色 -->
                        <Button
                            android:id="@+id/button_quota_plus"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:text="+"
                            android:textSize="18sp"
                            android:textColor="@android:color/holo_red_dark"
                            android:gravity="center"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="0dp" />
                    </LinearLayout>

                    <!-- 配额验证提示文字 -->
                    <TextView
                        android:id="@+id/textview_quota_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配额必须是100的整数倍"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="10sp"
                        android:visibility="gone"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tee部分 - 新增 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="3dp"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/textView_stock_tee_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:text="Tee"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <!-- Tee输入框 -->
                <EditText
                    android:id="@+id/edittext_stock_tee"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:inputType="numberDecimal"
                    android:background="@android:drawable/editbox_background_normal"
                    android:padding="4dp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@drawable/divider_line" />

        <!-- 按钮区域 -->
        <LinearLayout
            style="?android:buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/button_cancel"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp" />

            <Button
                android:id="@+id/button_ok"
                style="?android:buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ok"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>