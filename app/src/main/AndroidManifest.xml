<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.orion">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".application.OrionApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_orion"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">

        <activity android:name="com.android.orion.activity.MainActivity">
        </activity>
        <activity
            android:name="com.android.orion.activity.OrionMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.orion.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:launchMode="singleTop" >
        </activity>
        <activity android:name="com.android.orion.activity.DatabaseActivity" >
        </activity>
        <activity android:name="com.android.orion.activity.BaseActivity" >
        </activity>
        <activity android:name="com.android.orion.activity.StockEditActivity" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockDataChartListActivity"
            android:label="@string/stock_data_chart"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockStatisticsChartListActivity"
            android:label="@string/stock_statistics_chart"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockFinancialChartListActivity"
            android:label="@string/stock_financial_chart"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockListActivity"
            android:label="@string/stock_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.IndexComponentListActivity"
            android:label="@string/component_list"
            android:launchMode="singleTop" >
        </activity>
         <activity
            android:name="com.android.orion.activity.StockTrendListActivity"
            android:label="@string/trend_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockFinancialListActivity"
            android:label="@string/financial_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockListEditActivity"
            android:label="@string/list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockSearchActivity"
            android:label="@string/search"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.android.orion.activity.SettingActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.SettingLoopbackActivity"
            android:label="@string/title_activity_setting_loopback"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.DealListActivity"
            android:label="@string/title_activity_deal_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockDealListActivity"
            android:label="@string/title_activity_deal_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockDealActivity"
            android:label="@string/title_activity_deal"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockIPOListActivity"
            android:label="@string/ipo_list"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockFilterActivity"
            android:label="@string/filter"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.android.orion.activity.StockQuantListActivity"
            android:label="@string/filter"
            android:launchMode="singleTop" >
        </activity>

        <provider
            android:name="com.android.orion.provider.OrionContentProvider"
            android:authorities="com.android.orion"
            android:exported="false" >
        </provider>
        <provider
            android:name="com.android.orion.provider.StockSearchRecentSuggestionsProvider"
            android:authorities="com.android.orion.OrionSearchRecentSuggestionsProvider"
            android:exported="false" >
        </provider>

        <receiver android:name="com.android.orion.receiver.DownloadBroadcastReceiver" >
        </receiver>

        <service
            android:name="com.android.orion.service.OrionService"
            android:exported="false" />
    </application>

</manifest>